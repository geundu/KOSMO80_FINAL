<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.paprika.mybatis.mapper.course">
	<!-- =================== 수강목록 조회 콤보박스 시작 ========================== -->
	
	<select id="cbBoxCourseHistory" parameterType="map"
		statementType="CALLABLE">
		{CALL PROC_COURSE_HISTORY_COMBOBOX(#{STUDENT_NUMBER},
		#{cursor, jdbcType=CURSOR, mode=OUT, resultMap=testMap})}
	</select>
	
	<!-- =================== 수강목록 조회 콤보박스  끝  ========================== -->
	<select id="getCourseList" parameterType="map"
		statementType="CALLABLE">
		{CALL PROC_STU_SELECT_ONLINE_COURSE(#{STUDENT_NUMBER},
		#{cursor, jdbcType=CURSOR, mode=OUT, resultMap=testMap})}
	</select>

	<select id="getLectureList" parameterType="map"
		statementType="CALLABLE">
		{CALL PROC_ONLINE_LECTURE(#{STUDENT_NUMBER}, #{cursor,
		jdbcType=CURSOR, mode=OUT, resultMap=testMap})}
	</select>
	<select id="getLectureDetail" parameterType="map"
		statementType="CALLABLE">
		{CALL
		PROC_STU_ONLINE_LECTURE_DETAIL(#{ONLINE_LECTURE_NUMBER},#{STUDENT_NUMBER},
		#{cursor,
		jdbcType=CURSOR, mode=OUT, resultMap=testMap})}
	</select>
	<select id="homeworkInsert" parameterType="map">
		{CALL
		PROC_HOMEWORK_CUD(#{cud},#{HOMEWORK_NUMBER},#{ONLINE_LECTURE_NUMBER},#{STUDENT_NUMBER},
		#{HOMEWORK_FILE})}
	</select>
	<select id="homeworkUpdate" parameterType="map">
		{CALL
		PROC_HOMEWORK_CUD(#{cud},#{HOMEWORK_NUMBER},#{ONLINE_LECTURE_NUMBER},#{STUDENT_NUMBER},
		#{HOMEWORK_FILE})}
	</select>
	<select id="feedbackInsert" parameterType="map">
		{CALL
		PROC_STU_FEEDBACK_SEND_INSERT(#{FEEDBACK_NUMBER},#{STUDENT_NUMBER},#{ONLINE_LECTURE_NUMBER},#{FEEDBACK_CONTENT},
		#{FEEDBACK_CONTENT},sysdate)}
	</select>
</mapper>
